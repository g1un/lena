.title
	text-align center
	position relative
	margin-bottom 35px
	&:before
		content ''
		position absolute
		top 50%
		left 0
		right 0
		background #d9dbdd
		height 1px
	h2
		display inline-block
		vertical-align top
		padding 0 25px
		font-ptserif-bold()
		font-size 24px
		line-height 1.2em
		color #010101
		text-transform uppercase
		background #fff
		position relative
		&:before,
		&:after
			content ''
			position absolute
			top 0
			bottom 0
			width 100px
			background #fff
		&:before
			left -100px
			background linear-gradient(to left, #fff, transparent)
		&:after
			right -100px
			background linear-gradient(to right, #fff, transparent)
	@media only screen and (max-width 767px)
		h2
			&:before
			&:after
				width 20px
			&:before
				left -20px
			&:after
				right -20px