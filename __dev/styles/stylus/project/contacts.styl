.contacts
	border-bottom 1px solid #d9dbdd
	&-shop
		margin-bottom 60px
		&-image
			margin-bottom 42px
			line-height 0
			img
				width 100%
		&-title
			font-ptserif-bold()
			font-size 20px
			color #000
			text-transform uppercase
			margin-bottom 37px
		&-info
			margin-bottom 37px
			column-count 2
			column-gap 0
			li
				margin-bottom 10px
				padding-right 10px
				width 100%
				font-ptserif-bold()
				font-size 18px
				color #000
				span
					font-ptserif-reg()
		&-map
			h4
				display inline-block
				vertical-align top
				padding-right 13px
				margin-bottom 17px
				font-ptserif-reg()
				font-size 14px
				color #000
				font-weight 400
				text-transform uppercase
				cursor pointer
				position relative
				&:after
					content ''
					position absolute
					top 50%
					margin-top -2px
					right 0
					width 0
					height 0
					border-top 4px solid #000
					border-left 4px solid transparent
					border-right 4px solid transparent
				&.__opened
					&:after
						border-top none
						border-bottom 4px solid #000
	&-map
		display none
		width 100%
		height 308px
		&.__show
			display block
	@media only screen and (max-width 767px)
		&-shop
			&-info
				column-count 1