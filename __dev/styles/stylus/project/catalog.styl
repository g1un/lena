.catalog
	&.container
		padding-bottom 45px
	&-title
		text-align center
		position relative
		margin-bottom 35px
		&:before
			content ''
			position absolute
			top 50%
			left 0
			right 0
			background #d9dbdd
			height 1px
		h2
			display inline-block
			vertical-align top
			padding 0 25px
			font-ptserif-bold()
			font-size 24px
			line-height 1.2em
			color #010101
			text-transform uppercase
			background #fff
			position relative
			&:before,
			&:after
				content ''
				position absolute
				top 0
				bottom 0
				width 100px
				background #fff
			&:before
				left -100px
				background linear-gradient(to left, #fff, transparent)
			&:after
				right -100px
				background linear-gradient(to right, #fff, transparent)
	&-filter
		margin-bottom 30px
		font-size 0
		text-align center
		&-item
			display inline-block
			vertical-align top
			margin-right 20px
			&:last-child
				margin-right 0
		&-title
			padding-left 20px
			margin-bottom 7px
			font-size 14px
			color #878b90
			text-align left
		&-select
			font-size 18px
			color #434a54
			text-align left

			.ui-widget
				border 1px solid #e0e1e6
				border-radius 0
				min-width 180px
				background #fcfcfc
				font-ptserif-reg()
				font-size 18px
				color #434a54
			.ui-selectmenu-button
				span.ui-selectmenu-text
					line-height 42px
					padding 0 35px 0 20px
				span.ui-icon
					top 24px
					right 22px
					bottom auto
					left auto
			.ui-selectmenu-wrapper
				line-height 0
			.ui-icon
				background none
				position absolute
				top 0
				left 0
				width 8px
				height 8px
				border-left 1px solid #000
				border-bottom 1px solid #000
				transform rotate(-45deg)
	&-list
		text-align justify
		&:after
			content ''
			display inline-block
			vertical-align top
			width 100%
	&-item
		display inline-block
		vertical-align top
		width 32.2%
		margin-bottom 60px
		text-decoration none
		&-img
			min-height 522px
			border 1px solid #e0e1e6
			padding-top 20px
			line-height 0
			margin-bottom 20px
			text-align center
		p
			font-size 18px
			color #434a54
			text-align center
	&-price
		margin-top 15px
		font-ptserif-bold()
		font-size 18px
		color #000
		text-align center

	@media only screen and (max-width 1200px)
		&-item
			width 49%
		&-more
			margin 0 10px
	@media only screen and (max-width 768px)
		&-item
			width 100%
	@media only screen and (max-width 470px)
		&-filter
			&-item
				margin 0 0 20px





