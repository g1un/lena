.main-features
	font-size 0
	margin-bottom 20px
	overflow hidden
	&-item
		display inline-block
		vertical-align top
		width 32.2%
		margin-right 1.7%
		position relative
		line-height 0
		&:last-child
			margin-right 0
		&:nth-child(1)
			.main-features-link
				&:before
					content ''
					position absolute
					top 20px
					left 20px
					bottom 20px
					right 0
					border 1px solid #bbb
					border-right none
					z-index 1
		&:nth-child(2)
			.main-features-link
				&:before
					content ''
					position absolute
					top 20px
					right 0
					bottom 20px
					left 0
					border 1px solid #bbb
					border-right none
					border-left none
					z-index 1
		&:nth-child(3)
			.main-features-link
				&:before
					content ''
					position absolute
					top 20px
					right 20px
					bottom 20px
					left 0
					border 1px solid #bbb
					border-left none
					z-index 1
	&-link
		display block
		overflow hidden
		img
			backface-visibility hidden
			transform translateZ(0) scale(1.0, 1.0)
			width 100%
			transition transform .5s
		&:hover
			img
				transform scale(1.1) rotate(0.02deg)
		h3
			position absolute
			top 50%
			left 50%
			transform translateX(-50%) translateY(-50%)
			font-ptserif-bold()
			font-size 24px
			color #fff
			text-transform uppercase

	@media only screen and (max-width 640px)
		&-item
			width 100%
			margin 0 0 10px
			&:nth-child(1)
				.main-features-link
					&:before
						right 20px
						bottom 0
						border 1px solid #bbb
						border-bottom none
						z-index 1
			&:nth-child(2)
				.main-features-link
					&:before
						top 0
						bottom 0
						left 20px
						right 20px
						border 1px solid #bbb
						border-top none
						border-bottom none
						z-index 1
			&:nth-child(3)
				.main-features-link
					&:before
						top 0
						left 20px
						right 20px
						bottom 20px
						border 1px solid #bbb
						border-top none
						z-index 1
		&-link
			h3
				min-width 190px
				text-align center
				line-height 1.2em

