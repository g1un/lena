.novelties
	max-width 100%
	overflow hidden
	&-title
		text-align center
		position relative
		//margin-bottom 85px
		//&:before
		//	content ''
		//	position absolute
		//	top 50%
		//	left 0
		//	right 0
		//	background #929292
