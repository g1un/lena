.form
	font-size 0
	&-item
		display inline-block
		vertical-align top
		margin-right 20px
		&:last-child
			margin-right 0
	&-title
		padding-left 20px
		margin-bottom 7px
		font-size 14px
		color #878b90
		text-align left
	&-select
		font-size 18px
		color #434a54
		text-align left
		.ui-widget
			border 1px solid #e0e1e6
			border-radius 0
			min-width 180px
			background #fcfcfc
			font-ptserif-reg()
			font-size 18px
			color #434a54
		.ui-selectmenu-button
			span.ui-selectmenu-text
				line-height 42px
				padding 0 35px 0 20px
			span.ui-icon
				top 24px
				right 22px
				bottom auto
				left auto
		.ui-selectmenu-wrapper
			line-height 0
		.ui-icon
			background none
			position absolute
			top 0
			left 0
			width 8px
			height 8px
			border-left 1px solid #000
			border-bottom 1px solid #000
			transform rotate(-45deg)